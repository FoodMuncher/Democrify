<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="song-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :song_name %>
    <%= text_input f, :text, autocomplete: "off" %>
    <%= if @suggested_songs do %>
      <%= select f, :song_name, @suggested_songs %>
    <% end %>
    <%= error_tag f, :song_name %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
